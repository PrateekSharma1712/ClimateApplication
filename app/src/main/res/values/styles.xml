<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ClimateLabelStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="ClimateValueStyle">
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="DateHeaderStyle">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/dimen_18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CityHeaderStyle">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/dimen_20sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
